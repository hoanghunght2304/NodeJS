extends ../layouts/common

block content

    h1 Users
    //label(for="input") Mời nhập
    a(href="/users/create") New
    form(action="/users/search", method="GET", class="d-flex")
        input(type="text", name="q", id="input" placeholder="Seach ...", class="form-control" )
        button(class="btn btn-primary ml-2") Search

    ul 
        each user in users
            li
                span= user.name
                span &nbsp;
                a(href='/users/' + user.id) View
                //li= user.name + " " + user.age + " tuoi"